{
    "exclude": [
        "node_modules",
        "build"
    ],
    "include": [
        "src"
    ],
    "compilerOptions": {
        "allowJs": true,
        "strict": false,
        "module": "CommonJS",
        "strictNullChecks": false,
        "outDir": "build",
        "rootDir": "src",
        "skipLibCheck": true,
        "target": "ES2015",
        "resolveJsonModule": true
    },
}